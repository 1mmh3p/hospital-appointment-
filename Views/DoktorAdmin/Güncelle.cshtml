@model hastanerandevu.Models.Entities.doktorlar
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container" style="margin-top:20px;">
    @using (Html.BeginForm("Guncel", "DoktorAdmin", FormMethod.Post))
    {
        <div class="form-group">
            <label style="margin-top:10px;">Hospital Name</label>
            @Html.DropDownListFor(m => m.hastaneler.HASTANEID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control w-50", style = "margin-top:5px;" })
            <label style="margin-top:10px;">Clinic Name</label>
            @Html.DropDownListFor(m => m.klinikler.KLINIKID, (List<SelectListItem>)ViewBag.mrklr, new { @class = "form-control w-50", style = "margin-top:5px;" })
            <label style="margin-top:10px;">Doctor Name</label>
            @Html.TextBoxFor(m => m.DOKTORAD, new { @class = "form-control w-50", style = "margin-top:5px;" })

            <div style="margin-top:20px;">
                <button class="btn btn-warning">Update Doctor</button>
            </div>
        </div>
    }
</div>
