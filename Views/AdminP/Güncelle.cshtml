@model hastanerandevu.Models.Entities.hastaneler
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("Guncel", "AdminP", FormMethod.Post))
    {
        <div class="form-group">
            <label style="margin-top:10px;"> Hospital ID </label>
            @Html.TextBoxFor(m => m.HASTANEID, new { @class = "form-control w-50", style = "margin-top:5px;", @readonly = true })
            <label style="margin-top:10px;">City</label>
            @Html.DropDownListFor(m => m.sehirler.SEHIRID, (List<SelectListItem>)ViewBag.shr, new { @class = "form-control w-50", style = "margin-top:5px;" })
            <label style="margin-top:10px;">District</label>
            @Html.DropDownListFor(m => m.ilceler.ILCEID, (List<SelectListItem>)ViewBag.ilc, new { @class = "form-control w-50", style = "margin-top:5px;" })
            <label style="margin-top:10px;"> Hospital Name </label>
            @Html.TextBoxFor(m => m.HASTANEAD, new { @class = "form-control w-50", style = "margin-top:5px;" })

            <div style="margin-top:20px;">
                <button class="btn btn-warning">Update Hospital</button>
            </div>
        </div>
    }
</div>
